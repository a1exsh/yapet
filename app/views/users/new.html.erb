<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :locale %><br />
    <%= f.select :locale, locale_choices.map(&:last) %>
  </p>
  <p>
    <%= f.label :timezone %><br />
    <%= f.time_zone_select :timezone, nil, :default => 'Kyev' %>
  </p>
  <p>
    <%= f.label :records_per_page %><br />
    <%= f.select :records_per_page, pagination_choices %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
