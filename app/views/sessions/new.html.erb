<% form_tag session_path, :id => "login_form" do %>
<table>
  <tr>
    <td><%= label_tag :email, _("Email") %></td>
    <td><%= text_field_tag :email, @email %></td>
  </tr>
  <tr>
    <td><%= label_tag :password, _("Password") %></td>
    <td><%= password_field_tag :password %></td>
  </tr>
  <tr class="form-buttons">
    <td colspan="2">
      <div id="remember_me">
        <%= check_box_tag :remember %>
        <%= label_tag :remember, _("Remember me") %>
      </div>
      <%= submit_tag _("OK") %>
    </td>
  </tr>
  <tr id="forgot_password">
    <td colspan="2">
      <%= link_to _("Forgot your password?"), new_password_reset_request_path %>
    </td>
  </tr>
</table>
<% end %>
