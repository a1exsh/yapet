<h2><%=_("Password Reset Request")%></h2>
<p>
<%=_("Please specify an email address to which the password reset
instructions will be sent.")%>
</p>

<% form_tag password_reset_requests_path, :id => "pw_request_form" do %>
<p>
<%= label_tag :email, _("Email") %>
<%= text_field_tag :email, @email %>
<%= submit_tag _("OK") %>
</p>
<% end %>
